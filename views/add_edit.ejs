<%- include("partials/head"); -%>

<div class="container pt-5">
    <div class="row">
        <div class="myHeroeContainer col col-lg-12 boxShadowBorder">

            <div class="row p-2">
                <div class="col col-lg-4 col-sm-12 col-12 h3Decoration heroContHeight">
                    <div class="text-center titleSectionBorder mb-2">
                        <h3>Available Heroes</h3>
                    </div>
                    <div class="text-center overflow p-1">
                        <div class="row justify-content-around">
                            <!-- ejs loop -->
                            <div class="col col-lg-4 col-md-4 col-sm-4 col-4 avHeroContHeight m-1 ml-3 mt-2 boxShadowBorder">
                                <div class="col col-lg-9 col-md-10 col-sm-10 col-10 avHeroPicCont">
                                    <div class="avHeroName">Azar</div>
                                    <img src="images/1_fire/three_star/azar.jpg">
                                </div>
                                <div class="col col-lg-3 col-md-2 col-sm-2 col-2 avHeroStatCont">
                                    <div class="avHeroLvl starContHeight">
                                        <img src="images/style/star3.png" alt="">
                                    </div>
                                    <div class="avHeroLvl lvlContHeight pt-1">12</div>
                                    <div class="avHeroLvl ascContHeight">
                                        <img src="images/style/asc1.png">
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="col col-lg-4 col-sm-12 col-12 h3Decoration heroContHeight">
                    <div class="text-center titleSectionBorder mb-2">
                        <h3>My Heroes</h3>
                    </div>
                    <div class="text-center overflow p-1">
                        <div class="row justify-content-around">
                            <!-- ejs loop -->
                            <div class="col col-lg-4 col-md-4 col-sm-4 col-4 avHeroContHeight m-1 ml-3 mt-2 boxShadowBorder">
                                <div class="col col-lg-9 col-md-10 col-sm-10 col-10 avHeroPicCont">
                                    <div class="avHeroName">Azar</div>
                                    <img src="images/1_fire/three_star/azar.jpg">
                                </div>
                                <div class="col col-lg-3 col-md-2 col-sm-2 col-2 avHeroStatCont">
                                    <div class="avHeroLvl starContHeight">
                                        <img src="images/style/star3.png" alt="">
                                    </div>
                                    <div class="avHeroLvl lvlContHeight pt-1">12</div>
                                    <div class="avHeroLvl ascContHeight">
                                        <img src="images/style/asc1.png">
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <div class="col col-lg-4 col-sm-12 col-12 h3Decoration heroContHeight">
                    <div class="text-center titleSectionBorder mb-2">
                        <h3>Modify Heroes</h3>
                    </div>
                    <div class="row">
                        <div class="col-12 modHeroStatCont mt-3 pt-2 pb-3">
                            <div class="modHeroPicCont boxShadow m-auto">
                                <img src="images/1_fire/three_star/azar.jpg">
                            </div>
                        </div>
                        <div class="col-12 modHeroStatCont mt-3 pt-3">
                            <div class="inputSelectButtonWidth md-form active-cyan active-cyan-2 m-auto boxShadow">
                                <input class="form-control text-center" type="text" placeholder="LVL Number"
                                    aria-label="Search">
                            </div>
                        </div>
                        <div class="col-12 modHeroStatCont mt-2 pt-3">
                            <div class="row ascSelectWidth modHeroAscensionCont m-auto">
                                <div class="col col-lg-3">
                                    <div class="ascPicSize ascUrl1 boxShadow m-auto"></div>
                                </div>
                                <div class="col col-lg-3 ">
                                    <div class="ascPicSize ascUrl2 boxShadow m-auto"></div>
                                </div>
                                <div class="col col-lg-3 ">
                                    <div class="ascPicSize ascUrl3 boxShadow m-auto"></div>
                                </div>
                                <div class="col col-lg-3 ">
                                    <div class="ascPicSize ascUrl4 boxShadow m-auto"></div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12 modHeroStatCont mt-4 pt-4">
                            <div class="inputSelectButtonWidth boxShadow m-auto">
                                <button class="btn btn-lg btn-warning btn-block buttonFont" type="submit">Save Changes</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="backgroundOpacity"></div>
        </div>
    </div>

    <div class="myHeroeFilter row justify-content-center boxShadowBorder">

        <%- include("partials/filter"); -%>

        <div class="backgroundOpacity"></div>
    </div>
</div>

<%- include("partials/foot"); -%>